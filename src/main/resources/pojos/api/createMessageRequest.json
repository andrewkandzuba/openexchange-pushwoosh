    "javaType" : "io.openexchange.pojos.api.Request"
  },
  "id": "createMessageRequest",
  "additionalProperties": false,
  "generate-builders": true,
  "properties": {
    "application": {
      "javaType" : "io.openexchange.pojos.domain.Application",
